{
    // Workspaces
    "hyprland/workspaces" : {
        "on-scroll-up": "hyprctl dispatch workspace r-1",
        "on-scroll-down": "hyprctl dispatch workspace r+1",        
        "on-click": "activate",
        "active-only": false,
        "all-outputs": true,
        "format": "{}",
        "format-icons": {
            "urgent": "",
            "active": "",
            "default": ""
        },
        "persistent-workspaces": {
            "*": 5
        }
    },

    // Taskbar
    "wlr/taskbar": {
    	"all-outputs": true,
        "format": "{icon}",
        "icon-size": 18,
        "tooltip-format": "{name}",
        "on-click": "activate",
        "on-click-middle": "close",
        //"ignore-list": ["kitty"],
        "app_ids-mapping": {
            "firefoxdeveloperedition": "firefox-developer-edition"
        },
        "rewrite": {
            "Firefox Web Browser": "Firefox",
            "Foot Server": "Terminal"
        }
    },

    // Window
    "hyprland/window": {
            "format": "{}",
            "rewrite": {
            "(.*) - Mousepad": "  $1",
            "(.*) - Thunar": "  $1",
            "(.*) — Ablaze Floorp": "  $1"
        },
        "max-length": 200,
        "separate-outputs": true
    },
 
    // Cliphist
    "custom/cliphist": {
        "format": "",
        "on-click": "sleep 0.1 && ~/.config/scripts/cliphist.sh",
        "on-click-right": "sleep 0.1 && ~/.config/scripts/cliphist.sh d",
        "on-click-middle": "sleep 0.1 && ~/.config/scripts/cliphist.sh w",
        "tooltip-format": "Clipboard"
    },

    // Updates
    "custom/updates": {
        "format": "󰶡  {}",
        "tooltip-format": "{}",
        "escape": true,
        "return-type": "json",       
        "exec": "~/.config/scripts/updates.sh",
        "restart-interval": 3600,
        "on-click": "kitty -e ~/.config/scripts/installupdates.sh",
        "on-click-middle": "kitty -e ~/.config/scripts/cleanup.sh",
        "on-click-right": "kitty -e ~/.config/scripts/mirrorlist.sh",
    },
    
    // Wallpapers
    "custom/wallpaper": {
        "format": "",
        "on-click": "~/.config/scripts/wallpaper.sh select",
        "on-click-right": "~/.config/scripts/wallpaper.sh",
        "tooltip-format": "Wallpapers"
    },

    // Themes
    "custom/waybarthemes": {
        "format": "",
        "on-click": "~/.config/waybar/themeswitcher.sh",
        "tooltip-format": "Themes"
    },

    // Keybindings
    "custom/keybindings": {
        "format": "",
        "on-click": "~/.config/scripts/keybindings.sh",
        "tooltip": false
    },

    // File Manager
    "custom/filemanager": {
        "format": "",
        "on-click": "thunar",
        "tooltip": false
    },

    // Web Browser
    "custom/browser": {
        "format": "",
        "on-click": "floorp",
        "tooltip": false
    },    

    // Media Player
    "custom/player": {
        "format": "󱜅",
        "on-click": "smplayer",
        "tooltip": false
    },

    // App Menu
    "custom/appmenu": {
        "format": "",
        "on-click": "rofi -show drun -replace",
        "on-click-right": "~/.config/scripts/keybindings.sh",
        "tooltip-format": "Right click for keybinds"
    },
    
    // Power Menu
    "custom/exit": {
        "format": "",
        "on-click": "wlogout",
        "tooltip": false
    },

    // System tray
    "tray": {
        "icon-size": 20,
        "spacing": 10
    },

    // Clock
    "clock": {
        "tooltip-format": "<big>{:%a %d %B}</big>\n\n<tt><small>{calendar}</small></tt>",
        //"format-alt": "{:%d-%m-%Y}",
        "calendar": {
			"mode"          : "year",
			"mode-mon-col"  : 3,
			//"weeks-pos"		: "right",
			"on-scroll"     : 1,
				"format": {
					"months"	: "<span color='#ffead3'><b>{}</b></span>",
					"days"		: "<span color='#ecc6d9'><b>{}</b></span>",
					//"weeks"		: "<span color='#99ffdd'><b>W{}</b></span>",
					"weekdays"	: "<span color='#ffcc66'><b>{}</b></span>",
					"today"		: "<span color='#ff6699'><b><u>{}</u></b></span>"
				},
		},
		"actions": {
			"on-click"			: "mode",
			"on-scroll-up"		: "shift_up",
			"on-scroll-down"	: "shift_down"
		}
    },

    // CPU_temp
    "temperature": {
        "critical-threshold": 80,
        "format-critical": "CPU {temperatureC}°C",
        "format": "",
        "on-click": "kitty -e btop",
        "tooltip": false
    },

    // Language
    "hyprland/language": {
        //"on-click": "hyprctl switchxkblayout at-translated-set-2-keyboard next",
        "on-click": "hyprctl switchxkblayout lenovo-lenovo-calliope-usb-keyboard next",
        "format": "{}",
        "format-en": "US",
        "format-ru": "RU",
        //"keyboard-name": "at-translated-set-2-keyboard",
        "keyboard-name": "lenovo-lenovo-calliope-usb-keyboard"
    },

    // Network
    "network": {
        "format": "{ifname}",
        "format-wifi": " ",
        "format-ethernet": "  {ipaddr}",
        "format-disconnected": "Not connected",
        "tooltip-format": " {ifname} via {gwaddri}",
        "tooltip-format-wifi": "   {essid} ({signalStrength}%)",
        "tooltip-format-ethernet": "  {ifname} ({ipaddr}/{cidr})",
        "tooltip-format-disconnected": "Disconnected",
        "max-length": 50,
        "on-click": "kitty -e nmtui",
        "on-click-middle": "nmcli r wifi off | nmcli r wifi on"
    },

    // Battery
    "battery": {
        "states": {
            "warning": 30,
            "critical": 15,
        },
        "format": "{icon}   {capacity}%",
        "format-charging": "  {capacity}%",
        "format-plugged": "  {capacity}%",
        "format-alt": "{icon}  {time}",
        "format-icons": [" ", " ", " ", " ", " "]
    },

    // Pulseaudio
    "pulseaudio": {
        "format": "{icon} {volume}%",
        "format-bluetooth": "{volume}% {icon} {format_source}",
        "format-bluetooth-muted": " {icon} {format_source}",
        "format-muted": "",
        "format-source": " {volume}%",
        "format-source-muted": "",
        "tooltip-format": "middle-click to un/mute",
        "tooltip": true,
        "format-icons": {
            "headphone": "",
            "hands-free": "",
            "headset": "",
            "phone": "",
            "portable": "",
            "car": "",
            "default": [" ", " ", "󰕾 ", " "]
        },
        "on-click": "pavucontrol",
        "on-click-middle": "pactl set-sink-mute 0 toggle"
    },

    // Bluetooth
    "bluetooth": {
        "format-off": " {}",
        "on-click": "blueman-manager",
        "on-click-middle": "bluetoothctl power off | bluetoothctl power on",
        "tooltip-format": "middle-click to on/off",
        "tooltip": true
    },

    // Other
    "user": {
        "format": "{user}",
        "interval": 60,
        "icon": false
    }
}
